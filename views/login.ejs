<%- include('./partials/header'); %>
<main class="notBootstrap">
    <div class="contain">
        <%- include('./partials/messages') -%> 
        <h2>Login</h2>
        <form action="/login" method="post">
            <input type="text" class="input" name="email" placeholder="Email Address">
            <input type="text" class="input" name="password" placeholder="Password">
            <a href="" class="m-2 text-danger">Forgot Password?</a>
            <button type="submit" class="formButton">Login</button>
            <p class="m-2 text-center">OR</p>
        </form>
        <form action="/signUp" method="get">
            <button class="formButton">Sign Up</button>
        </form>
    </div>
</main>
<%- include('./partials/footer'); %>